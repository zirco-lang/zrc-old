{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["./src/*", "./src/**/*"],
    "exclude": ["node_modules/"]
}
